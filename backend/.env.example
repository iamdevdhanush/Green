# GreenOps Environment Configuration
# Copy to .env and fill in your values

# ── Application ──────────────────────────────────────────────
APP_NAME=GreenOps
APP_ENV=development
APP_DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_64_CHAR_STRING
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Database ─────────────────────────────────────────────────
DATABASE_URL=postgresql://greenops:greenops_dev@localhost:5432/greenops

# ── Redis ────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── JWT ──────────────────────────────────────────────────────
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# ── Rate Limiting ────────────────────────────────────────────
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=10

# ── Energy Constants ─────────────────────────────────────────
# Average kWh per hour for an idle server
IDLE_KWH_PER_HOUR=0.12
# CO2 kg per kWh (US grid average)
CO2_KG_PER_KWH=0.386
# Electricity cost per kWh (USD)
COST_PER_KWH=0.12

# ── Celery ───────────────────────────────────────────────────
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ── Agent Settings ───────────────────────────────────────────
AGENT_IDLE_THRESHOLD_MINUTES=15
SHUTDOWN_COMMAND_TTL_SECONDS=120
