# GreenOps Environment Configuration
# Copy to .env and fill in your values
# NEVER commit .env to version control

# ─────────────── Environment ───────────────
ENV=production
DEBUG=false

# ─────────────── Database ───────────────
POSTGRES_USER=greenops
POSTGRES_PASSWORD=CHANGE_ME_strong_db_password_here
POSTGRES_DB=greenops

# ─────────────── Security (REQUIRED) ───────────────
# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET_KEY=CHANGE_ME_generate_with_command_above

# Initial admin user (only used on first startup)
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=CHANGE_ME_at_least_12_chars

# ─────────────── CORS ───────────────
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost,https://your-domain.com

# ─────────────── Tokens ───────────────
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ─────────────── Rate Limiting ───────────────
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
LOGIN_RATE_LIMIT_REQUESTS=10
LOGIN_RATE_LIMIT_WINDOW_SECONDS=300

# ─────────────── Energy Calculation ───────────────
# Adjust for your hardware
IDLE_POWER_WATTS=65
ACTIVE_POWER_WATTS=120
ELECTRICITY_COST_PER_KWH=0.12

# ─────────────── Networking ───────────────
HTTP_PORT=80
HTTPS_PORT=443

# ─────────────── Logging ───────────────
LOG_LEVEL=INFO

# ─────────────── SSL (optional) ───────────────
# SSL_CERT_PATH=./nginx/certs
